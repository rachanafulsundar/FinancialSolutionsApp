<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img7"
    tools:context="com.example.dell.splash1.MainActivity1"

    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_x="33dp"
        android:layout_y="16dp"
        android:text="Financial goal calculator"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#1b137c"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_x="35dp"
        android:layout_y="99dp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="203dp"
        android:text="Expected Rate of Return"
        android:textColor="#000000"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_x="19dp"
        android:layout_y="158dp"
        android:text="Your Goal Amount"
        android:textColor="#000000"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        />


    <EditText
        android:id="@+id/editText"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_x="235dp"
        android:layout_y="153dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_x="20dp"
        android:layout_y="236dp"
        android:max="20" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="265dp"
        android:layout_height="30dp"
        android:layout_x="22dp"
        android:layout_y="285dp"
        android:text="Expected Rate of Inflation"
        android:textColor="#000000"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_x="21dp"
        android:layout_y="324dp"
        android:max="20" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="370dp"
        android:text="Time Period(in years)"
        android:textColor="#000000"
        android:textSize="20dp"
    android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/editText2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_x="277dp"
        android:layout_y="366dp"
        android:ems="10"
        android:textSize="18dp"
        android:inputType="number"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_x="25dp"
        android:layout_y="413dp"
        android:text="Initial Savings"
        android:textColor="#000000"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_x="278dp"
        android:layout_y="405dp"
        android:ems="10"
        android:textSize="18dp"
        android:textColor="#000000"
        android:inputType="number"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_x="20dp"
        android:layout_y="455dp"
        android:text="Calculate"
        android:background="#1b137c"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="62dp"
        android:layout_height="30dp"
        android:layout_x="292dp"
        android:layout_y="284dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="62dp"
        android:layout_height="30dp"
        android:layout_x="294dp"
        android:layout_y="200dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        />


</AbsoluteLayout>
