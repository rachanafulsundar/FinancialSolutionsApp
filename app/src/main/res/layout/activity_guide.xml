<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.splash1.Guide">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_x="0dp"
        android:layout_y="70dp"
        android:background="#636360"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:text="Stock Analysis" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_x="0dp"
        android:layout_y="180dp"
        android:background="#266A2E"
        android:textColor="#FFFFFF"
        android:textSize="18dp"

        android:text="Currency Maximiser" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_x="0dp"
        android:layout_y="295dp"
        android:background="#1b137c"
        android:textColor="#FFFFFF"
        android:textSize="18dp"

        android:text="Goal Calculator" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_x="0dp"
        android:layout_y="410dp"
        android:background="#e18e06"
        android:textColor="#FFFFFF"
        android:textSize="18dp"

        android:text="Bank Comparator" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="164dp"
        android:layout_y="23dp"
        android:text="Guide"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />
</AbsoluteLayout>
